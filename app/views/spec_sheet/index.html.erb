<% pagenumber = 1 %>
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf8" />
  <title><%= @project.name %></title>
</head>
<body>
  <% if @project.components.any? %>
    <% @project.components.each_slice(3) do |components| %>
      <%= render({
        partial: 'spec_sheet/page', 
        locals: { title: 'Materials', project: @project, data: components, view: 'components', pagenumber: pagenumber }
      }) %>
      <% pagenumber += 1 %>
    <% end %>
  <% end %>
  <% if @project.measurement_values.any? %>
    <%= render({
      partial: 'spec_sheet/page', 
      locals: { title: 'Measurements', project: @project, data: @project, view: 'measurements', pagenumber: pagenumber }
    }) %>
    <% pagenumber += 1 %>
  <% end %>
  <% if @project.instructions.any? %>
    <% @project.instructions.each_slice(4) do |instructions| %>
      <%= render({
        partial: 'spec_sheet/page', 
        locals: { title: 'Instructions', project: @project, data: instructions, view: 'instructions', pagenumber: pagenumber }
      }) %>
      <% pagenumber += 1 %>
    <% end %>
  <% end %>
</body>
</html>